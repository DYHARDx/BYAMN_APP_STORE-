<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<ScrollView
			android:id="@+id/scroll"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scrollbars="none">
			<LinearLayout
				android:id="@+id/scroll_in_body"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/top_bar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/back"
						android:layout_width="48dp"
						android:layout_height="48dp"
						android:src="@drawable/ic_chevron_left_black"
						android:scaleType="center" />
					<TextView
						android:id="@+id/top_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="8dp"
						android:layout_marginRight="8dp"
						android:text="Project Name"
						android:textSize="20sp"
						android:textColor="#000000"
						android:singleLine="true"
						android:layout_weight="1" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/project_info"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<FrameLayout
						android:id="@+id/icon_and_progress"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical">
						<ProgressBar
							android:id="@+id/progress"
							android:layout_width="85dp"
							android:layout_height="85dp"
							android:layout_margin="14dp"
							android:indeterminate="false"
							style="?android:progressBarStyleHorizontal"
							android:progressDrawable="@drawable/circular_progress_bar"
							android:background="@drawable/circle_shape"
							android:indeterminateDrawable="@drawable/circular_progress_bar" />
						<androidx.cardview.widget.CardView
							android:id="@+id/icon_card"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_margin="14dp"
							android:layout_gravity="center_horizontal|center_vertical"
							app:cardElevation="2dp"
							app:cardCornerRadius="14dp">
							<ImageView
								android:id="@+id/icon"
								android:layout_width="65dp"
								android:layout_height="65dp"
								android:src="@drawable/icon"
								android:scaleType="fitCenter" />
						</androidx.cardview.widget.CardView>
					</FrameLayout>
					<LinearLayout
						android:id="@+id/project_info_inner"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginTop="18dp"
						android:layout_marginRight="14dp"
						android:layout_marginBottom="18dp"
						android:orientation="vertical">
						<TextView
							android:id="@+id/project_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Project Name"
							android:textSize="20sp"
							android:textColor="#000000" />
						<TextView
							android:id="@+id/publisher"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="BYAMN "
							android:textSize="14sp"
							android:textColor="#03A9F4" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/download"
					android:layout_width="match_parent"
					android:layout_height="44dp"
					android:layout_marginLeft="14dp"
					android:layout_marginTop="8dp"
					android:layout_marginRight="14dp"
					android:layout_marginBottom="14dp"
					android:padding="12dp"
					android:background="#03A9F4"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/download_icon"
						android:layout_width="18dp"
						android:layout_height="18dp"
						android:layout_marginRight="8dp"
						android:src="@drawable/download_outline"
						android:scaleType="centerInside" />
					<TextView
						android:id="@+id/download_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Download"
						android:textSize="16sp"
						android:textColor="#FFFFFF" />
				</LinearLayout>
				<HorizontalScrollView
					android:id="@+id/categories_scroll"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:scrollbars="none">
					<LinearLayout
						android:id="@+id/categories_scroll_body"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="14dp"
						android:paddingTop="8dp"
						android:paddingRight="14dp"
						android:paddingBottom="8dp"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/project_category"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="8dp"
							android:padding="12dp"
							android:text="Usefull App"
							android:textSize="14sp"
							android:textColor="#607D8B" />
						<TextView
							android:id="@+id/category_project_recommended"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="8dp"
							android:padding="12dp"
							android:text="Fully Mod Apk"
							android:textSize="14sp"
							android:textColor="#607D8B" />
						<TextView
							android:id="@+id/category_project_editors_choice"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="12dp"
							android:text="Full Safe "
							android:textSize="14sp"
							android:textColor="#607D8B" />
					</LinearLayout>
				</HorizontalScrollView>
				<LinearLayout
					android:id="@+id/my_comment"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/new_comment"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:gravity="center_horizontal"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/linear1"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">
							<LinearLayout
								android:id="@+id/top_layout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginLeft="14dp"
								android:layout_marginTop="14dp"
								android:layout_marginRight="14dp"
								android:layout_marginBottom="8dp"
								android:gravity="center_vertical"
								android:orientation="horizontal">
								<TextView
									android:id="@+id/title"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginRight="8dp"
									android:text="More Info"
									android:textSize="20sp"
									android:textStyle="bold"
									android:textColor="#000000"
									android:layout_weight="1" />
								<ImageView
									android:id="@+id/imageview1"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:src="@drawable/ic_chevron_right_black"
									android:scaleType="center" />
							</LinearLayout>
							<LinearLayout
								android:id="@+id/description"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="vertical">
								<LinearLayout
									android:id="@+id/whats_new"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:background="#E1F5FE"
									android:orientation="vertical">
									<TextView
										android:id="@+id/whats_new_title"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginLeft="14dp"
										android:layout_marginTop="8dp"
										android:layout_marginRight="14dp"
										android:layout_marginBottom="8dp"
										android:text="What's New"
										android:textSize="18sp"
										android:textColor="#01579B" />
									<TextView
										android:id="@+id/whats_new_text"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginLeft="14dp"
										android:layout_marginRight="14dp"
										android:layout_marginBottom="8dp"
										android:text="Whats New"
										android:textSize="18sp"
										android:textColor="#000000" />
								</LinearLayout>
								<TextView
									android:id="@+id/description_title"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="14dp"
									android:layout_marginTop="8dp"
									android:layout_marginRight="14dp"
									android:layout_marginBottom="8dp"
									android:text="Description"
									android:textSize="18sp"
									android:textStyle="bold"
									android:textColor="#000000" />
								<TextView
									android:id="@+id/description_text"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="14dp"
									android:layout_marginRight="14dp"
									android:layout_marginBottom="8dp"
									android:text="Description"
									android:textSize="16sp"
									android:textColor="#424242" />
							</LinearLayout>
							<LinearLayout
								android:id="@+id/spc1"
								android:layout_width="match_parent"
								android:layout_height="1dp"
								android:padding="8dp"
								android:background="#F5F5F5"
								android:orientation="horizontal" />
							<LinearLayout
								android:id="@+id/spc2"
								android:layout_width="match_parent"
								android:layout_height="1dp"
								android:padding="8dp"
								android:background="#F5F5F5"
								android:orientation="horizontal" />
							<LinearLayout
								android:id="@+id/linear2"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:paddingLeft="14dp"
								android:paddingTop="8dp"
								android:paddingRight="14dp"
								android:paddingBottom="8dp"
								android:orientation="vertical">
								<TextView
									android:id="@+id/textview1"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginBottom="8dp"
									android:text="Other Informations"
									android:textSize="18sp"
									android:textStyle="bold"
									android:textColor="#000000" />
								<LinearLayout
									android:id="@+id/version_layout"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="8dp"
									android:layout_marginBottom="12dp"
									android:gravity="center_vertical"
									android:orientation="horizontal">
									<TextView
										android:id="@+id/version_title"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="Version:"
										android:textSize="18sp"
										android:textColor="#000000" />
									<LinearLayout
										android:id="@+id/version_space"
										android:layout_width="wrap_content"
										android:layout_height="match_parent"
										android:padding="8dp"
										android:orientation="vertical"
										android:layout_weight="1" />
									<TextView
										android:id="@+id/version_text"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="Version"
										android:textSize="18sp"
										android:textColor="#616161" />
								</LinearLayout>
								<LinearLayout
									android:id="@+id/size_layout"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginBottom="12dp"
									android:gravity="center_vertical"
									android:orientation="horizontal">
									<TextView
										android:id="@+id/size_title"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="Size:"
										android:textSize="18sp"
										android:textColor="#000000" />
									<LinearLayout
										android:id="@+id/size_space"
										android:layout_width="wrap_content"
										android:layout_height="match_parent"
										android:padding="8dp"
										android:orientation="vertical"
										android:layout_weight="1" />
									<TextView
										android:id="@+id/size_text"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="Size"
										android:textSize="18sp"
										android:textColor="#616161" />
								</LinearLayout>
								<LinearLayout
									android:id="@+id/release_date_layout"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginBottom="12dp"
									android:gravity="center_vertical"
									android:orientation="horizontal">
									<TextView
										android:id="@+id/release_date_title"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="Release Date:"
										android:textSize="18sp"
										android:textColor="#000000" />
									<LinearLayout
										android:id="@+id/release_date_space"
										android:layout_width="wrap_content"
										android:layout_height="match_parent"
										android:padding="8dp"
										android:orientation="vertical"
										android:layout_weight="1" />
									<TextView
										android:id="@+id/release_date_text"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="Release Date"
										android:textSize="18sp"
										android:textColor="#616161" />
								</LinearLayout>
								<LinearLayout
									android:id="@+id/compatibility"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginBottom="12dp"
									android:gravity="center_vertical"
									android:orientation="horizontal">
									<TextView
										android:id="@+id/compatibility_title"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="Compatibility:"
										android:textSize="18sp"
										android:textColor="#000000" />
									<LinearLayout
										android:id="@+id/compatibility_space"
										android:layout_width="wrap_content"
										android:layout_height="match_parent"
										android:padding="8dp"
										android:orientation="vertical"
										android:layout_weight="1" />
									<TextView
										android:id="@+id/compatibility_text"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="Compatibility"
										android:textSize="18sp"
										android:textColor="#616161" />
								</LinearLayout>
								<TextView
									android:id="@+id/textview2"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:padding="8dp"
									android:text="Â©2024 BYAMN"
									android:textSize="12sp"
									android:textColor="#000000"
									android:layout_gravity="center_horizontal" />
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
